@{
}

@model Book

@*Added spacing between cards here*@
<div class="card card-outline-primary m-4 p-4">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge bg-info" style="float:right">
                <small>Price: @Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        @*Book information for cards*@
        <ul>
            <li>Author: @Model.Author</li>
            <li>Publisher: @Model.Publisher</li>
            <li>Isbn: @Model.Isbn</li>
            <li>Classification: @Model.Classification</li>
            <li>Category: @Model.Category</li>
            <li>Number of Pages: @Model.PageCount</li>
        </ul>
    </div>

    <form method="post" asp-page="/addToCart">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <button type="submit" class="btn btn-success float-md-end">Add to Cart</button>
        </span>
    </form>

</div>

